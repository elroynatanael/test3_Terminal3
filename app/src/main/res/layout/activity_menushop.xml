        <ImageView
            android:layout_width="105dp"
            android:layout_height="105dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="20dp"
            android:scaleType="fitXY"
            android:src="@drawable/alexandre" />

        <LinearLayout
